{
  "name": "overwatch",
  "version": "0.2.0",
  "description": "Self-organizing AI task system with isolated agent sessions",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc && rm -rf dist/skills/library && cp -r src/skills/library dist/skills/library && for role in src/skills/*/SKILL.md; do dir=$(basename $(dirname $role)); mkdir -p dist/skills/$(basename $(dirname $role)) && cp $role dist/skills/$(basename $(dirname $role))/; done",
    "start": "node dist/launch.js",
    "start:headless": "node dist/launch.js --no-tui",
    "start:daemon": "node dist/daemon/index.js",
    "start:manager": "node dist/manager/index.js",
    "start:telegram": "node dist/telegram/index.js",
    "start:tui": "node dist/tui/index.js",
    "dev": "tsx src/launch.ts",
    "dev:daemon": "tsx src/daemon/index.ts",
    "dev:manager": "tsx src/manager/index.ts",
    "dev:telegram": "tsx src/telegram/index.ts",
    "dev:tui": "tsx src/tui/index.ts",
    "dev:web": "tsx src/web/index.ts"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.0",
    "better-sqlite3": "^11.0.0",
    "dotenv": "^17.2.4",
    "grammy": "^1.30.0",
    "ink": "^5.1.0",
    "react": "^18.3.0",
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.0",
    "tsx": "^4.0.0",
    "typescript": "^5.5.0"
  }
}
